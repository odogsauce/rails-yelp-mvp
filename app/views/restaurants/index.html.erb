<div class="container">
  <div class="row">
    <div class="col-12">
      <h1> List Restaurants </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% @restaurants.each do |restaurant| %>
      <div class="card m-2">
        <h2><%=  link_to restaurant.name, restaurant_path(restaurant) %></h2>
        <p><%= restaurant.category %></p>
        <h6><%=link_to "Edit Restaurant", edit_restaurant_path(restaurant.id) %></h6>
        <%= link_to "Delete", restaurant_path(restaurant.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </div>
      <% end %>
      <p><%= link_to "add restaurant", new_restaurant_path, class: "btn btn-primary" %></p>
    </div>
  </div>
</div>
